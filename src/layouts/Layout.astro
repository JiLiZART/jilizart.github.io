    <meta name="twitter:image" content="android-chrome-192x192.png">
    <meta name="twitter:image:alt" content="Nikolay Kost - JavaScript Developer">

    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        return 'light';
      })();
      if (theme === 'dark') document.documentElement.classList.add('dark');
    </script>
  </head>
  <body class="flex flex-col bg-gradient-to-br from-amber-50 to-blue-50 dark:from-gray-900 dark:to-gray-800 min-h-screen font-sans font-['Inter'] transition-colors">
    <slot />
    <ThemeToggle />
    <Footer />
  </body>

