    <meta property="og:type" content="website">
    <meta property="og:title" content="Nikolay Kost - JavaScript Developer">
    <meta property="og:title" lang="ru" content="Николай Костюрин — JavaScript Разработчик">
    <meta property="og:description" content="Nikolay Kost - JavaScript Developer specializing in web applications and efficient JavaScript solutions">
    <meta property="og:description" lang="ru" content="Николай Костюрин — разработчик JavaScript, специализирующийся на веб-приложениях и эффективных решениях JavaScript">

    <meta property="og:image" content="android-chrome-192x192.png">

    <!-- Twitter Meta Tags -->
    <meta property="twitter:domain" content="artkost.dev">
    <meta property="twitter:domain" lang="ru" content="artkost.ru">
    <meta property="twitter:url" content="https://artkost.dev/">
    <meta property="twitter:url" lang="ru" content="https://artkost.ru/">
