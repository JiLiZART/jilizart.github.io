    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="Nikolay Kost - JavaScript Developer">
    <meta name="twitter:title" lang="ru" content="Nikolay Костюрин - JavaScript Разработчик">
    <meta name="twitter:image" content="android-chrome-192x192.png">
    <meta name="twitter:image:alt" content="Nikolay Kost - JavaScript Developer">
    <meta name="twitter:image:alt" lang="ru" content="Nikolay Костюрин - JavaScript Разработчик">

    <meta name="ahrefs-site-verification" content="02bbece82fd93f7352123d0b2fdca15b55b6cdf90e672bb28d5456458fafcf37">

    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script is:inline>
        const theme = (() => {
            if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
                return localStorage.getItem('theme');
            }
            return 'light';
        })();
        if (theme === 'dark') document.documentElement.classList.add('dark');
    </script>
    <style is:inline>
        a:hover {
            cursor: none;
        }

        .scrollbar::-webkit-scrollbar {
            width: 6px;
            background-color: transparent;
        }

        .scrollbar::-webkit-scrollbar-track {
            -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
            border-radius: 10px;
            background-color: transparent;
        }

        .scrollbar::-webkit-scrollbar-thumb {
            border-radius: 10px;
            -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3);
            background-color: #555;
        }

        body {
            background-color: #fff9f5;
        }

        .backdrop {
            background-image: radial-gradient(circle at 20% 80%, rgba(255, 220, 190, 0.3) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(255, 245, 238, 0.35) 0%, transparent 50%),
            radial-gradient(circle at 40% 40%, rgba(255, 210, 180, 0.15) 0%, transparent 50%);
        }

        body.dark {
            background-color: black;
        }

        .dark .backdrop {
            background-image: radial-gradient(circle at 50% 100%, rgba(70, 85, 110, 0.5) 0%, transparent 60%),
            radial-gradient(circle at 50% 100%, rgba(99, 102, 241, 0.4) 0%, transparent 70%),
            radial-gradient(circle at 50% 100%, rgba(181, 184, 208, 0.3) 0%, transparent 80%);
        }
    </style>
</head>
<body class="flex flex-col dark:bg-black min-h-screen transition-colors relative h-screen w-full bg-[#fff9f5] touch-none items-center justify-center overflow-hidden">
<div class="absolute inset-0 z-0 backdrop" />
<main id="main" role="main" class="overflow-y-scroll overflow-x-hidden absolute inset-0 scrollbar">
    <slot />
    <ThemeToggle />
    <Footer />
</main>
</body>

