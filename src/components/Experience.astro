---
const experiences = [
  {
    emoji: "🎸",
    company: "Muse Group",
    products: [
      {
        name: "Musescore",
        link: "https://musescore.com"
      },
      {
        name: "Ultimate Guitar",
        link: "https://ultimate-guitar.com"
      }
    ],
    description: "Contributed to music notation and guitar tablature platforms"
  },
  {
    emoji: "👷",
    company: "Skyeng",
    link: "https://skyeng.ru",
    description: "Developed educational technology solutions"
  },
  {
    emoji: "👨‍🏫",
    company: "Medialooks",
    link: "https://medialooks.net",
    description: "Designed Single Page Applications"
  },
  {
    emoji: "👨‍💻",
    project: "Fast BBCode Parser",
    link: "https://github.com/jilizart/bbob",
    description: "Creator of high-performance BBCode parsing library"
  }
];
---
<article class="w-full py-6 flex flex-col gap-6 rounded-2xl overflow-hidden bg-gradient-to-br from-purple-50 to-sky-100 dark:from-gray-700 dark:to-gray-600">
  <h2 class="px-6 text-2xl font-bold dark:text-white">Experience</h2>
  <div class="flex flex-col gap-1">
    {experiences.map(exp => (
      <div class="flex items-start space-x-4 px-6 py-4 hover:bg-white/50 dark:hover:bg-gray-800/50 transition-colors">
        <span class="text-2xl">{exp.emoji}</span>
        <div>
          <h3 class="text-lg font-semibold dark:text-white">
            {exp.company && (
              <span>{exp.company}</span>
            )}
            {exp.project && (
              <a href={exp.link} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                {exp.project}
              </a>
            )}
          </h3>
          {exp.products && (
            <div class="text-gray-600 dark:text-gray-400 mb-1">
              {exp.products.map((product, index) => (
                <>
                  <a href={product.link} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                    {product.name}
                  </a>
                  {index < exp.products.length - 1 && " • "}
                </>
              ))}
            </div>
          )}
          <p class="text-gray-600 dark:text-gray-400">{exp.description}</p>
        </div>
      </div>
    ))}
  </div>
</article>
