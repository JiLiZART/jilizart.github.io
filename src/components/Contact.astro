---
import { SiGithub, SiX, SiLinkedin, SiGmail, SiTelegram } from 'react-icons/si';
import {t} from "../helpers/t";

const socials = [
  {
    name: "GitHub",
    icon: SiGithub,
    link: "https://github.com/jilizart",
    username: "jilizart"
  },
  {
    name: "Twitter",
    icon: SiX,
    link: "https://x.com/jilizart",
    username: "@jilizart"
  },
  {
    name: "LinkedIn",
    icon: SiLinkedin,
    link: "https://linkedin.com/in/nkostyurin",
    username: "nkosturin"
  },
  {
    name: "Email",
    icon: SiGmail,
    link: "mailto:nk@artkost.dev",
    username: "nk@artkost.dev"
  },
  {
    name: "Telegram",
    icon: SiTelegram,
    link: "https://t.me/jilizart",
    username: "@jilizart"
  }
];
---

<article class="w-full p-6">
  <h2 class="text-2xl font-bold mb-8 dark:text-white">{t("Let's Connect ðŸ¤™")}</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
    {socials.map(({ name, icon: Icon, link, username }) => (
      <a
        href={link}
        class="flex items-center space-x-3 p-4 rounded-lg bg-white/50 dark:bg-gray-800/50 hover:bg-white/80 dark:hover:bg-gray-800/80 transition-colors group"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon className="w-5 h-5 text-gray-600 dark:text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-400" />
        <div>
          <div class="font-medium text-gray-900 dark:text-white">{name}</div>
          <div class="text-sm text-gray-600 dark:text-gray-400">{username}</div>
        </div>
      </a>
    ))}

    <div class="p-4">
        <a
            href="https://bit.ly/nkcv"
            class="inline-flex items-center px-6 py-3 bg-black dark:bg-white text-white dark:text-black rounded-full hover:bg-gray-800 dark:hover:bg-gray-100 transition-colors"
            target="_blank"
            rel="noopener noreferrer"
        >
            {t("View CV")}
        </a>
    </div>
  </div>
</article>
