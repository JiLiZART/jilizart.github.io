        {tech.map(({ name, icon: Icon, weight, bg }) => (
          <li class={`flex flex-row items-center gap-2 px-2 py-1 rounded-lg text-gray-600 dark:text-gray-400 ${bg} dark:bg-gray-800/50 transition-colors`} data-weight={weight}>
